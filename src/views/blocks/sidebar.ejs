      <a href="/feed/subscriptions" <% if (page == "subscriptions") {%> class="active" <%}%>><i class="fas fa-home"></i> Subscriptions</a>
    </li>
    <li class="small-txt">
      <a href="/feed/livestreams" <% if (page == "livestreams") {%> class="active" <%}%>><i class="fas fa-home"></i> Livestreams</a>
    </li>
    <hr>
    <li class="side-text">
      <a href="/feed/subscriptions" <% if (page == "history") {%> class="active" <%}%>><i class="fas fa-history"></i> History</a>
    </li>
    <% if (user) { %>
      <li class="side-text">
        <a href="/feed/subscriptions" <% if (page == "later") {%> class="active" <%}%>><i class="fas fa-home"></i> Watch later</a>
      </li>
      <li class="side-text">
        <a href="/feed/subscriptions" <% if (page == "liked") {%> class="active" <%}%>><i class="far fa-thumbs-up"></i> Liked videos</a>
      </li>
