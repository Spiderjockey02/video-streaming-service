<div class="media">
  <img class="mr-3" src="/api/avatar/<%= comment.ownerId%>" alt="Icon">
  <div class="media-body">
    <h5 class="mt-0"><%= comment.owner.name%> <small><%= timeAgo.format(comment.createdAt) %><% if (comment.createdAt - comment.updatedAt > 1000) { %> (edited)<% } %></small></h5>
    <%= comment.content%>
    <br>
    <i class="fas fa-thumbs-up"></i> <%= comment.likes %>
    <i class="fas fa-thumbs-down"></i> <%= comment.dislikes %>
    <button type="button" name="button">Reply</button>
    <div class="">
      <form action="/video/reply/<%= video.id %>/<%= comment.id %>" method="post">
        <input type="text" name="content">
        <button type="submit" name="button">Reply</button>
      </form>
    </div>
    <% if (comment.replies >= 1) { %>
      <% if (comment.replies == 1) { %>
        <button onclick="myFunction()">Show reply</button>
      <% } else { %>
        <button onclick="myFunction()">Show <%= comment.replies %> replies</button>
      <% } %>
      <div id="replies" style="display:none;" data-reply="<%= comment.id%>">
      </div>
    <% } %>
  </div>
</div>
